{
	"name": "mullvad-connectivity-checker",
	"version": "1.4.0",
	"description": "Mullvad Connectivity Checker",
	"author": "nitrohorse",
	"scripts": {
		"bundle": "web-ext -s add-on -a dist build --overwrite-dest",
		"serve": "web-ext run -s ./add-on",
		"vuln-check": "nsp check --output summary",
		"update-check": "ncu",
		"dep-check": "npm-run-all --parallel vuln-check update-check",
		"lint-addon": "addons-linter add-on",
		"lint-js": "eslint .",
		"lint": "npm-run-all --parallel lint-addon lint-js",
		"pre-dist-check": "npm-run-all --parallel lint dep-check",
		"dist": "npm-run-all pre-dist-check bundle",
		"eslint-check": "eslint --print-config .eslintrc.json | eslint-config-prettier-check"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/nitrohorse/mullvad-connectivity-checker"
	},
	"bugs": {
		"url": "https://github.com/nitrohorse/mullvad-connectivity-checker/issues"
	},
	"license": "GPL-3.0",
	"keywords": [
		"webextensions"
	],
	"devDependencies": {
		"addons-linter": "^0.36.1",
		"eslint": "^4.17.0",
		"eslint-config-prettier": "^2.9.0",
		"eslint-plugin-prettier": "^2.6.0",
		"npm-run-all": "^4.1.2",
		"nsp": "^3.1.0",
		"prettier": "1.10.2",
		"web-ext": "^2.4.0"
	}
}
